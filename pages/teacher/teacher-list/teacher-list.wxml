<view class="teacher_box">
  <view class="teacher_item">
    <view class="">
      <image class="" src="/asset/images/teacher.png" />
      <text class="">导师姓名：</text>
    </view>
    <view class="">{{teacherName}}</view>
  </view>
  <view class="teacher_item">
    <view class="">
      <image class="" src="/asset/images/more_person.png" />
      <text class="">当前报考人数</text>
    </view>
    <view class="">
      共有
      <text class="warn_font">{{reportNum}}</text>
      名
    </view>
  </view>
  <view class="teacher_item" wx:if="{{rank >0}}">
    <view class="">
      <image class="" src="/asset/images/rank_person.png" />
      <text class="">导师组内排名：</text>
    </view>
    <view class="">
      第
      <text class="warn_font">{{rank}}</text>
      名
    </view>
  </view>
</view>
<view class="studentList">
  <view class="rank_title">导师组内排名</view>
  <view class="rank_content">
    <view class="rank_table">
      <view class="">考生ID</view>
      <view class="">成绩</view>
      <view class="">名次</view>
    </view>
    <view class="rank_item {{item.rank == rank ? 'activeLine':''}}" wx:for="{{applyStudentList}}">
      <view class="">{{item.openid}}</view>
      <view class="">{{item.score}}</view>
      <view class="">{{item.rank}}</view>
    </view>
  </view>
</view>
<view class="bottom_box" wx:if="{{no_more}}">你看到人家的底线啦～</view>
<view class="button_box">
  <view class="check_apply" bindtap="checkTeacher">确认报考</view>
  <view class="img_box" bindtap="openSelectBox">
    <image class="" src="/asset/images/share.png" />
    <view class="">分享</view>
  </view>
</view>
<!-- <view class="bottom_box"> -->
  <view class="bottom_box" wx:if="{{shareStatus}}">
  <button class='bottom_item' open-type="share">分享给好友</button>
  <view class="bottom_item" bindtap="saveImg">保存到相册</view>
  <view class="bottom_item" bindtap = "cancel">取消</view>
</view>
<view style="position: fixed;left: 1000rpx;">
  <component-painter 
    canvas-id="teacherList"
    palette="{{teacherTemplete}}" 
    bind:imgOK="onImgOK"
  ></component-painter>
</view>
 <view class="poster-wrap-bg" wx:if="{{ showPosterWrap }}">
    <view class="poster-wrap">
      <image class="poster-wrap-close" src="https://assets.aleqipei.com/wxapp/images/ale-mall/detail/selection__close.png" lazy-load="true" bindtap='showSaveImg'></image>
      <view class="poster-wrap-title">
        <view>保存到相册</view>
        <view>保存到手机相册后，可将图片分享到您的圈子</view>
      </view>
      <view class="color-bg" style="opacity: {{ posterImgPath ? '1' : '0' }}">
        <view class="white-bg">
          <view class="title">{{ goodsInfo.item.title }}</view>
          <view class="price">
            <text>¥{{ selection.selectedGood ? selection.selectedGood.price : goodsInfo.item.price }}</text>
            <text class="mkt_price">¥{{ selection.selectedGood ? selection.selectedGood.mkt_price : goodsInfo.item.mkt_price }}</text>
          </view>
          <text class="coupon" wx:for="{{couponTitleList}}" wx:for-index="index">{{item.title}}</text>
          <view class="quantity">
            <text>销量 {{ goodsInfo.item.sold_quantity }} 件</text>
          </view>
          <image class="good-image" src='{{ goodsInfo.item.list_image ? goodsInfo.item.list_image[0] : goodsInfo.item.image_default_id }}'></image>
          <view class="qrcode-bg">
            <image src="{{ qrcodeUrl }}" class="share-qrcode"></image>
            <image src='https://assets.aleqipei.com/wxapp/images/ale-mall/detail/poster_bg.png'></image>
          </view>
        </view>
      </view>
      <view class="poster-footer" bindtap='savePoster' wx:if="{{ saveImgScope }}">保存图片</view>
      <view class="poster-footer" bindtap='openSettingModel' wx:if="{{ !saveImgScope }}">保存图片</view>
    </view>
  </view>