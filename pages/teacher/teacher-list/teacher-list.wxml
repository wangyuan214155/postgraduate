<view class="teacher_box">
  <view class="teacher_item">
    <view class="">
      <image class="" src="/asset/images/teacher.png" />
      <text class="">导师姓名：</text>
    </view>
    <view class="">{{teacherName}}</view>
  </view>
  <view class="teacher_item">
    <view class="">
      <image class="" src="/asset/images/more_person.png" />
      <text class="">当前报考人数：</text>
    </view>
    <view class="">
      共有
      <text class="warn_font">{{reportNum}}</text>
      名
    </view>
  </view>
  <view class="teacher_item" wx:if="{{rank >0}}">
    <view class="">
      <image class="" src="/asset/images/rank_person.png" />
      <text class="">导师组内排名：</text>
    </view>
    <view class="">
      第
      <text class="warn_font">{{rank}}</text>
      名
    </view>
  </view>
</view>
<view class="studentList">
  <view class="rank_title">导师组内排名</view>
  <view class="rank_content">
    <view class="rank_table">
      <view class="">考生ID</view>
      <view class="">成绩</view>
      <view class="">名次</view>
    </view>
    <view class="rank_item {{item.rank == rank ? 'activeLine':''}}" wx:for="{{applyStudentList}}">
      <view class="">{{item.openid}}</view>
      <view class="">{{item.score}}</view>
      <view class="">{{item.rank}}</view>
    </view>
  </view>
</view>
<view class="bottom_box_copy" wx:if="{{no_more}}">你看到人家的底线啦～</view>
<view class="button_box">
  <view class="check_apply" bindtap="checkTeacher">确认报考</view>
  <view class="img_box" bindtap="openSelectBox">
    <image class="" src="/asset/images/share1.png" />
    <view class="">分享</view>
  </view>
</view>
<view class="bottom_box" wx:if="{{shareStatus}}">
  <button class='bottom_item' open-type="share">分享给好友</button>
  <view class="bottom_item" bindtap="saveImg">保存到相册</view>
  <view class="bottom_item" bindtap="cancel">取消</view>
</view>
<view style="position: fixed;left:800rpx;">
  <component-painter canvas-id="teacherList" palette="{{teacherTemplete}}" bind:imgOK="onImgOK"></component-painter>
</view>
<view class="poster-wrap-bg" wx:if="{{ showPosterWrap }}">
  <view class="poster-wrap">
    <image class="poster-wrap-close" src="https://assets.aleqipei.com/wxapp/images/ale-mall/detail/selection__close.png" lazy-load="true" bindtap='saveImg'></image>
    <view class="poster-wrap-title">
      <view>保存到相册</view>
      <view>保存到手机相册后，可将图片分享到您的圈子</view>
    </view>
    <view class="small_box">
      <view class="teacher_box_copy">
        <view class="teacher_item_copy">
          <view class="">
            <image class="" src="/asset/images/teacher.png" />
            <text class="">导师姓名：</text>
          </view>
          <view class="">{{teacherName}}</view>
        </view>
        <view class="teacher_item_copy">
          <view class="">
            <image class="" src="/asset/images/more_person.png" />
            <text class="">当前报考人数</text>
          </view>
          <view class="">
            共有
            <text class="warn_font_copy">{{reportNum}}</text>
            名
          </view>
        </view>
        <view class="teacher_item_copy" wx:if="{{rank >0}}">
          <view class="">
            <image class="" src="/asset/images/rank_person.png" />
            <text class="">导师组内排名：</text>
          </view>
          <view class="">
            第
            <text class="warn_font_copy">{{rank}}</text>
            名
          </view>
        </view>
      </view>
      <view class="studentList_copy">
        <view class="rank_title_copy">导师组内排名</view>
        <view class="rank_content_copy">
          <view class="rank_table_copy">
            <view class="">考生ID</view>
            <view class="">成绩</view>
            <view class="">名次</view>
          </view>
          <view class="rank_item_copy {{item.rank == rank ? 'activeLine':''}}" wx:for="{{applyStudentList}}">
            <view class="">{{item.openid}}</view>
            <view class="">{{item.score}}</view>
            <view class="">{{item.rank}}</view>
          </view>
        </view>
        <view class="qrcode_box">
          <image class="" src="/asset/images/minipagram.jpg" />
          <view class="">
            <view class="big_font">导师名额小程序</view>
            <view class="small_font">长按识别.去看看</view>
          </view>
        </view>
      </view>
    </view>
    <view class="poster-footer" bindtap='savePoster' wx:if="{{ saveImgScope }}">保存图片</view>
    <view class="poster-footer" bindtap='openSettingModel' wx:if="{{ !saveImgScope }}">保存图片</view>
  </view>
</view>
<view class="bg" wx:if="{{showBg}}">
  <view class="modal">
    <view class="title">提示</view>
    <view class="phone-num" style="color: #666666;padding: 0 46rpx;text-align: left;">
      保存图片需要您授权导师名额获取您的存储位置权限
    </view>
    <view class="btn-area">
      <view bindtap='closeTip' style="border-right: 1rpx solid #cccccc;">取消</view>
      <button open-type="openSetting" style="color: #ff3333;border: none;" plain="true">设置</button>
    </view>
  </view>
</view>